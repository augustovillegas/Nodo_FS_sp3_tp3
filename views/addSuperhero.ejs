<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Agregar SuperhÃ©roe</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Bangers&family=Roboto&display=swap"
      rel="stylesheet"
    />
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      body {
        font-family: "Roboto", sans-serif;
        background-color: #1a1a1a;
        color: #f4f4f4;
      }
      h1,
      label {
        font-family: "Bangers", cursive;
        color: #e50914;
      }
      input,
      button {
        font-family: "Roboto", sans-serif;
      }
    </style>
  </head>
  <body class="p-6">
    <div class="max-w-2xl mx-auto">
      <h1 class="text-4xl mb-6">Agregar SuperhÃ©roe</h1>

      <!-- ðŸš¨ MODAL DE ERRORES DEL SERVIDOR -->
      <% if (errors && errors.length) { %>
      <div
        id="server-error-modal"
        class="fixed inset-0 flex items-center justify-center z-50"
      >
        <div
          class="absolute inset-0 bg-black bg-opacity-70 backdrop-blur-sm"
        ></div>
        <div
          class="relative bg-[#2a2a2a] border border-red-500 text-white p-6 rounded-lg shadow-xl max-w-lg w-full z-10"
        >
          <h2 class="text-xl font-bold mb-4 text-red-400">
            Â¡Ups! Hubo errores al procesar el formulario:
          </h2>
          <ul class="list-disc pl-5 space-y-1 text-sm">
            <% errors.forEach(err => { %>
            <li><%= err.msg %></li>
            <% }) %>
          </ul>
          <div class="mt-6 text-right">
            <button
              onclick="document.getElementById('server-error-modal').classList.add('hidden')"
              class="bg-red-600 hover:bg-red-500 px-4 py-2 rounded text-white shadow"
            >
              Cerrar
            </button>
          </div>
        </div>
      </div>
      <% } %>
      <!-- ðŸ”š FIN DEL MODAL -->

      <form
        action="/api/heroes/agregar"
        method="POST"
        autocomplete="off"
        class="bg-[#2a2a2a] p-8 rounded-lg shadow-2xl space-y-8"
      >
        <div
          id="input-tooltip"
          class="absolute bg-[#e50914] text-white px-3 py-1 text-sm font-semibold rounded shadow-lg opacity-0 transition-all duration-300 pointer-events-none"
          style="top: 0; left: 0"
        ></div>
        <div class="relative space-y-1">
          <input
            type="text"
            name="nombreSuperHeroe"
            placeholder="Nombre del superhÃ©roe"
            required
            pattern=".{3,60}"
            value="<%= old?.nombreSuperHeroe %>"
            class="w-full p-2 rounded border border-black bg-[#666] hover:bg-[#e50914] text-black transition duration-300 ease-in-out placeholder-black/90"
          />
          <p
            id="nombreSuperHeroe-error"
            class="absolute top-full left-0 mt-1 text-sm text-red-400 bg-[#1a1a1a] opacity-0 transition-opacity duration-300 ease-in-out pointer-events-none"
          ></p>
        </div>

        <div class="relative space-y-1">
          <input
            type="text"
            name="nombreReal"
            placeholder="Nombre real"
            required
            pattern=".{3,60}"
            value="<%= old?.nombreReal %>"
            class="w-full p-2 rounded border border-black bg-[#666] hover:bg-[#e50914] text-black transition duration-300 ease-in-out placeholder-black/90"
          />
          <p
            id="nombreReal-error"
            class="absolute top-full left-0 mt-1 text-sm text-red-400 bg-[#1a1a1a] opacity-0 transition-opacity duration-300 ease-in-out pointer-events-none"
          ></p>
        </div>

        <div class="relative space-y-1">
          <input
            type="number"
            name="edad"
            placeholder="Edad"
            required
            min="0"
            value="<%= old?.edad %>"
            class="w-full p-2 rounded border border-black bg-[#666] hover:bg-[#e50914] text-black transition duration-300 ease-in-out placeholder-black/90"
          />
          <p
            id="edad-error"
            class="absolute top-full left-0 mt-1 text-sm text-red-400 bg-[#1a1a1a] opacity-0 transition-opacity duration-300 ease-in-out pointer-events-none"
          ></p>
        </div>

        <div class="relative space-y-1">
          <input
            type="text"
            name="planetaOrigen"
            pattern=".{3,60}"
            placeholder="Planeta de origen"
            required
            value="<%= old?.planetaOrigen %>"
            class="w-full p-2 rounded border border-black bg-[#666] hover:bg-[#e50914] text-black transition duration-300 ease-in-out placeholder-black/90"
          />
          <p
            id="planetaOrigen-error"
            class="absolute top-full left-0 mt-1 text-sm text-red-400 bg-[#1a1a1a] opacity-0 transition-opacity duration-300 ease-in-out pointer-events-none"
          ></p>
        </div>

        <div class="relative space-y-1">
          <input
            type="text"
            name="debilidad"
            pattern=".{3,60}"
            placeholder="Debilidad"
            required
            value="<%= old?.debilidad %>"
            class="w-full p-2 rounded border border-black bg-[#666] hover:bg-[#e50914] text-black transition duration-300 ease-in-out placeholder-black/90"
          />
          <p
            id="debilidad-error"
            class="absolute top-full left-0 mt-1 text-sm text-red-400 bg-[#1a1a1a] opacity-0 transition-opacity duration-300 ease-in-out pointer-events-none"
          ></p>
        </div>

        <div class="relative space-y-1">
          <input
            type="text"
            name="habilidadEspecial"
            pattern=".{3,60}"
            placeholder="Habilidad Especial"
            value="<%= old?.habilidadEspecial %>"
            class="w-full p-2 rounded border border-black bg-[#666] hover:bg-[#e50914] text-black transition duration-300 ease-in-out placeholder-black/90"
          />
          <p
            id="habilidadEspecial-error"
            class="absolute top-full left-0 mt-1 text-sm text-red-400 bg-[#1a1a1a] opacity-0 transition-opacity duration-300 ease-in-out pointer-events-none"
          ></p>
        </div>

        <div class="relative space-y-1">
          <input
            type="text"
            name="poderes"
            pattern=".{3,60}"
            placeholder="Poderes (separados por coma)"
            required
            value="<%= old?.poderes %>"
            class="w-full p-2 rounded border border-black bg-[#666] hover:bg-[#e50914] text-black transition duration-300 ease-in-out placeholder-black/90"
          />
          <p
            id="poderes-error"
            class="absolute top-full left-0 mt-1 text-sm text-red-400 bg-[#1a1a1a] opacity-0 transition-opacity duration-300 ease-in-out pointer-events-none"
          ></p>
        </div>

        <div class="relative space-y-1">
          <input
            type="text"
            name="aliados"
            pattern=".{3,60}"
            placeholder="Aliados (separados por coma)"
            required
            value="<%= old?.aliados %>"
            class="w-full p-2 rounded border border-black bg-[#666] hover:bg-[#e50914] text-black transition duration-300 ease-in-out placeholder-black/90"
          />
          <p
            id="aliados-error"
            class="absolute top-full left-0 mt-1 text-sm text-red-400 bg-[#1a1a1a] opacity-0 transition-opacity duration-300 ease-in-out pointer-events-none"
          ></p>
        </div>

        <div class="relative space-y-1">
          <input
            type="text"
            name="enemigos"
            pattern=".{3,60}"
            placeholder="Enemigos (separados por coma)"
            required
            value="<%= old?.enemigos %>"
            class="w-full p-2 rounded border border-black bg-[#666] hover:bg-[#e50914] text-black transition duration-300 ease-in-out placeholder-black/90"
          />
          <p
            id="enemigos-error"
            class="absolute top-full left-0 mt-1 text-sm text-red-400 bg-[#1a1a1a] opacity-0 transition-opacity duration-300 ease-in-out pointer-events-none"
          ></p>
        </div>
        <div class="relative space-y-1">
          <input
            type="text"
            name="creador"
            pattern=".{3,60}"
            placeholder="Creador"
            required
            value="<%= old?.creador %>"
            class="w-full p-2 rounded border border-black bg-[#666] hover:bg-[#e50914] text-black transition duration-300 ease-in-out placeholder-black/90"
          />
          <p
            id="creador-error"
            class="absolute top-full left-0 mt-1 text-sm text-red-400 bg-[#1a1a1a] opacity-0 transition-opacity duration-300 ease-in-out pointer-events-none"
          ></p>
        </div>
        <div class="flex justify-center">
          <button
            type="submit"
            class="bg-yellow-500 hover:bg-yellow-400 text-black tracking-wide px-10 py-3 rounded shadow"
          >
            Agregar
          </button>
        </div>
      </form>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const inputs = document.querySelectorAll(
          "form input[required], form input[pattern]"
        );

        inputs.forEach((input) => {
          const container = document.createElement("div");
          container.className = "relative space-y-1";
          input.parentNode.insertBefore(container, input);
          container.appendChild(input);

          const errorMessage = document.createElement("p");
          errorMessage.id = `${input.name}-error`;
          errorMessage.className = `
        absolute top-full left-0 mt-1 text-sm text-red-400 bg-[#1a1a1a]
        opacity-0 transition-opacity duration-300 ease-in-out
      `;
          errorMessage.style.pointerEvents = "none";
          container.appendChild(errorMessage);

          input.addEventListener("input", () =>
            validateInput(input, errorMessage)
          );
          input.addEventListener("blur", () =>
            validateInput(input, errorMessage)
          );
        });

        function validateInput(input, errorDiv) {
          if (!input.validity.valid) {
            if (input.validity.valueMissing) {
              errorDiv.textContent = "Este campo es obligatorio.";
            } else if (input.validity.patternMismatch) {
              errorDiv.textContent = "Debe tener entre 3 y 60 caracteres.";
            } else if (input.validity.rangeUnderflow) {
              errorDiv.textContent = "La edad no puede ser negativa.";
            } else {
              errorDiv.textContent = "Campo invÃ¡lido.";
            }
            errorDiv.classList.remove("opacity-0");
            errorDiv.classList.add("opacity-100");
          } else {
            errorDiv.classList.remove("opacity-100");
            errorDiv.classList.add("opacity-0");
          }
        }
      });
    </script>

    <div
      id="field-info"
      class="fixed top-6 right-6 bg-[#e50914] text-white px-4 py-2 rounded shadow-lg text-sm font-semibold transition-opacity duration-300 opacity-0 pointer-events-none z-50"
    ></div>
    <!-- Modal informativo para input activo -->
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const inputs = document.querySelectorAll("form input");
        const tooltip = document.getElementById("input-tooltip");

        inputs.forEach((input) => {
          input.addEventListener("focus", () => {
            const rect = input.getBoundingClientRect();
            const labelText = input.getAttribute("placeholder") || input.name;

            tooltip.textContent = `${labelText}`;
            tooltip.style.top = `${window.scrollY + rect.top + 8}px`;
            tooltip.style.left = `${rect.left - tooltip.offsetWidth - 20}px`;

            tooltip.classList.remove("opacity-0");
            tooltip.classList.add("opacity-100");
          });

          input.addEventListener("blur", () => {
            tooltip.classList.remove("opacity-100");
            tooltip.classList.add("opacity-0");
          });
        });
      });
    </script>
  </body>
</html>
